<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplicationtest2.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/images123">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hambuger"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/textView2"
            android:background="@drawable/hambu"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Count"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#6D4C41"
                android:id="@+id/textView5" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="28sp"
                android:layout_marginLeft="65dp"
                android:background="#00000000"
                android:id="@+id/downBt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1set"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="24dp"
                android:id="@+id/countNum" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:background="#00000000"
                android:textSize="28sp"
                android:id="@+id/upBt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Price"
                android:layout_marginLeft="37dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#6D4C41"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="35$"
                android:layout_marginLeft="130dp"
                android:textSize="24dp"
                android:id="@+id/priceNum" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Select"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
